{
  "title": "DB & SSH",
  "description": "Set-up shared database and SSH settings.",
  "type": "object",
  "required": [
    "db"
  ],
  "properties": {
    "db": {
      "title": "Database",
      "type": "object",
      "required": [
        "hostname",
        "port"
      ],
      "propertyOrder": 1,
      "properties": {
        "hostname": {
          "title": "Hostname",
          "type": "string",
          "propertyOrder": 10
        },
        "port": {
          "title": "Port",
          "type": "integer",
          "propertyOrder": 20,
          "default": 9200
        }
      }
    },
    "authentication": {
      "title": "Authentication",
      "propertyOrder": 2,
      "properties": {
        "auth_type": {
          "title": "Authentication Type",
          "type": "string",
          "enum": [
            "basic",
            "api_key",
            "bearer",
            "no_auth"
          ],
          "default": "basic",
          "options": {
            "enum_titles": [
              "Basic",
              "API key",
              "Bearer",
              "No Authentication"
            ]
          },
          "propertyOrder": 1
        },
        "username": {
          "title": "Username",
          "type": "string",
          "options": {
            "dependencies": {
              "auth_type": "basic"
            }
          },
          "propertyOrder": 2
        },
        "#password": {
          "title": "Password",
          "type": "string",
          "format": "password",
          "options": {
            "dependencies": {
              "auth_type": "basic"
            }
          },
          "propertyOrder": 3
        },
        "#api_key": {
          "title": "API Key",
          "type": "string",
          "format": "password",
          "options": {
            "dependencies": {
              "auth_type": "api_key"
            }
          },
          "propertyOrder": 4
        },
        "#bearer": {
          "title": "Bearer Token",
          "type": "string",
          "format": "password",
          "options": {
            "dependencies": {
              "auth_type": "bearer"
            }
          },
          "propertyOrder": 5
        }
      }
    },
    "ssh": {
      "title": "SSH",
      "type": "object",
      "propertyOrder": 3,
      "properties": {
        "ssh_hostname": {
          "title": "SSH Hostname",
          "type": "string",
          "propertyOrder": 1
        },
        "ssh_port": {
          "title": "SSH Port",
          "type": "integer",
          "propertyOrder": 2
        },
        "ssh_username": {
          "title": "SSH Username",
          "type": "string",
          "propertyOrder": 3
        },
        "#ssh_private_key": {
          "title": "SSH Private Key",
          "type": "string",
          "format": "password",
          "propertyOrder": 4
        }
      }
    },
    "scheme": {
      "title": "Scheme",
      "type": "string",
      "enum": [
        "http",
        "https"
      ],
      "default": "http",
      "propertyOrder": 4
    }
  }
}